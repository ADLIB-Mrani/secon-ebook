# Backend Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ebook
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API Keys (Free Tier)
# Hugging Face - Get from: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Unsplash - Get from: https://unsplash.com/developers
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# Google Books - Get from: https://console.cloud.google.com/
GOOGLE_BOOKS_API_KEY=your_google_books_api_key

# RapidAPI - Get from: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key

# Optional: OpenAI for advanced content enhancement
OPENAI_API_KEY=your_openai_api_key

# Application Settings
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_EXTENSIONS=pdf,docx,txt,md,html,epub
TEMP_DIR=/tmp/ebook_temp
OUTPUT_DIR=/app/generated_ebooks

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# N8N Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_API_BASE_PATH=/api/v1
